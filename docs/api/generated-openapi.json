  "paths": {
    "/health-check": {
      "get": {
        "operationId": "healthCheck",
        "summary": "Basic health check endpoint",
        "description": "Returns OK to indicate the service is running",
        "tags": [
          "Health"
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error.INTERNAL_SERVER_ERROR"
                }
              }
            }
          }
        }
      }
    },
    "/health/database": {
      "get": {
        "operationId": "databaseHealth",
        "summary": "Database health check endpoint",
        "description": "Returns detailed database health status including connectivity, performance, and configuration",
        "tags": [
          "Health",
          "Database"
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": [
                        "pass",
                        "warn",
                        "fail"
                      ]
                    },
                    "responseTime": {
                      "type": "number"
                    },
                    "message": {
                      "type": "string"
                    },
                    "timestamp": {
                      "type": "string"
                    },
                    "details": {
                      "type": "object",
                      "properties": {
                        "connectivity": {
                          "type": "object",
                          "properties": {
                            "status": {
                              "type": "string",
                              "enum": [
                                "pass",
                                "fail"
                              ]
                            },
                            "responseTime": {
                              "type": "number"
                            }
                          },
                          "required": [
                            "status",
                            "responseTime"
                          ],
                          "additionalProperties": false
                        },
                        "pragmaConfig": {
                          "type": "object",
                          "properties": {
                            "status": {
                              "type": "string",
                              "enum": [
                                "pass",
                                "warn",
                                "fail"
                              ]
                            },
                            "settings": {
                              "type": "object",
                              "propertyNames": {
                                "type": "string"
                              },
                              "additionalProperties": {
                                "anyOf": [
                                  {
                                    "type": "string"
                                  },
                                  {
                                    "type": "number"
                                  }
                                ]
                              }
                            },
                            "issues": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              }
                            }
                          },
                          "required": [
                            "status",
                            "settings",
                            "issues"
                          ],
                          "additionalProperties": false
                        },
                        "connectionPool": {
                          "type": "object",
                          "properties": {
                            "status": {
                              "type": "string",
                              "enum": [
                                "pass",
                                "warn",
                                "fail"
                              ]
                            },
                            "active": {
                              "type": "number"
                            },
                            "max": {
                              "type": "number"
                            },
                            "utilization": {
                              "type": "number"
                            }
                          },
                          "required": [
                            "status",
                            "active",
                            "max",
                            "utilization"
                          ],
                          "additionalProperties": false
                        },
                        "performance": {
                          "type": "object",
                          "properties": {
                            "status": {
                              "type": "string",
                              "enum": [
                                "pass",
                                "warn",
                                "fail"
                              ]
                            },
                            "averageQueryTime": {
                              "type": "number"
                            },
                            "slowQueries": {
                              "type": "number"
                            }
                          },
                          "required": [
                            "status",
                            "averageQueryTime",
                            "slowQueries"
                          ],
                          "additionalProperties": false
                        },
                        "diskSpace": {
                          "type": "object",
                          "properties": {
                            "status": {
                              "type": "string",
                              "enum": [
                                "pass",
                                "warn",
                                "fail"
                              ]
                            },
                            "info": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "status",
                            "info"
                          ],
                          "additionalProperties": false
                        }
                      },
                      "required": [
                        "connectivity",
                        "pragmaConfig",
                        "connectionPool",
                        "performance",
                        "diskSpace"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "status",
                    "responseTime",
                    "message",
                    "timestamp",
                    "details"
                  ],
                  "additionalProperties": false
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error.INTERNAL_SERVER_ERROR"
                }
              }
            }
          }
        }
      }
    },
    "/private-data": {
      "get": {
        "operationId": "privateData",
        "summary": "Get private user data",
        "description": "Returns private data for authenticated users",
        "tags": [
          "Auth",
          "User"
        ],
        "security": [
          {
            "Authorization": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "id",
                        "name",
                        "email"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "message",
                    "user"
                  ],
                  "additionalProperties": false
                }
              }
            }
          },
          "401": {
            "description": "Authorization not provided",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error.UNAUTHORIZED"
                }
              }
            }
          },
          "403": {
            "description": "Insufficient access",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error.FORBIDDEN"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error.INTERNAL_SERVER_ERROR"
                }
              }
            }
          }
        }
      }
    },
    "/performance/metrics": {
      "get": {
        "operationId": "performance-metrics",
        "summary": "Get current performance metrics",
        "description": "Returns current performance metrics, benchmarks, and alert status",
        "tags": [
          "Performance"
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "timestamp": {
                      "type": "string"
                    },
                    "responseTime": {
                      "type": "object",
                      "properties": {
                        "current": {
                          "type": "number"
                        },
                        "status": {
                          "type": "string"
                        },
                        "benchmark": {
                          "type": "string"
                        },
                        "thresholds": {}
                      },
                      "required": [
                        "current",
                        "status",
                        "benchmark",
                        "thresholds"
                      ],
                      "additionalProperties": false
                    },
                    "requests": {
                      "type": "object",
                      "properties": {
                        "total": {
                          "type": "number"
                        },
                        "errors": {
                          "type": "number"
                        },
                        "errorRate": {
                          "type": "number"
                        },
                        "successRate": {
                          "type": "number"
                        }
                      },
                      "required": [
                        "total",
                        "errors",
                        "errorRate",
                        "successRate"
                      ],
                      "additionalProperties": false
                    },
                    "alerts": {
                      "type": "object",
                      "properties": {
                        "active": {
                          "type": "boolean"
                        },
                        "reasons": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        },
                        "count": {
                          "type": "number"
                        }
                      },
                      "required": [
                        "active",
                        "reasons",
                        "count"
                      ],
                      "additionalProperties": false
                    },
                    "benchmarks": {}
                  },
                  "required": [
                    "timestamp",
                    "responseTime",
                    "requests",
                    "alerts",
                    "benchmarks"
                  ],
                  "additionalProperties": false
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/error.INTERNAL_SERVER_ERROR"
                }
              }
            }
          }
        }
      }
    },
    "/performance/benchmarks": {
      "get": {
        "operationId": "performance-benchmarks",
        "summary": "Get performance benchmark comparison",
        "description": "Returns performance benchmark definitions and current status",
        "tags": [
          "Performance"
        ],
        "responses": {
          "200": {
            "description": "Successful response",
