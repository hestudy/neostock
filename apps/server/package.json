{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/index.js",
		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:coverage": "vitest run --coverage",
		"test:performance": "vitest run src/__tests__/performance --reporter=verbose",
		"lint": "eslint . --ext ts,js --report-unused-disable-directives --max-warnings 15",
		"lint:fix": "eslint . --ext ts,js --fix",
		"db:local": "turso dev --db-file local.db",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"docs:validate": "bun run src/scripts/validate-docs.ts",
		"docs:validate:enhanced": "bun run src/scripts/validate-docs-enhanced.ts",
		"docs:check-changes": "bun run src/scripts/check-api-changes.ts",
		"quality:gate": "bun run src/scripts/quality-gate.ts",
		"security:gate": "bun run src/scripts/security-gate.ts",
		"pre-deploy": "bun run src/scripts/pre-deploy.ts"
	},
	"dependencies": {
		"@hono/trpc-server": "^0.4.0",
		"@libsql/client": "^0.15.9",
		"@trpc/client": "^11.4.2",
		"@trpc/server": "^11.4.2",
		"better-auth": "^1.3.4",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.2",
		"hono": "^4.8.2",
		"trpc-to-openapi": "^3.0.1",
		"zod": "^4.0.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"@types/bun": "^1.2.20",
		"@vitest/coverage-v8": "^2.1.8",
		"drizzle-kit": "^0.31.2",
		"eslint": "^9.33.0",
		"openapi-types": "^12.1.3",
		"tsdown": "^0.12.9",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.40.0",
		"vitest": "^2.1.8"
	}
}
