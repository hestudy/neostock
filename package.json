{
	"name": "neostock",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"test": "turbo test",
		"test:ci": "turbo test -- --run",
		"test:coverage": "turbo test:coverage",
		"test:performance": "turbo test:performance",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:report": "playwright show-report",
		"lint": "turbo lint",
		"lint:fix": "turbo lint:fix",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F server db:push",
		"db:studio": "turbo -F server db:studio",
		"db:generate": "turbo -F server db:generate",
		"db:migrate": "turbo -F server db:migrate",
		"docs:validate": "turbo -F server docs:validate",
		"quality:gate": "turbo -F server quality:gate",
		"security:gate": "turbo -F server security:gate",
		"pre-deploy": "turbo -F server pre-deploy"
	},
	"dependencies": {},
	"devDependencies": {
		"@playwright/test": "^1.55.0",
		"playwright": "^1.55.0",
		"turbo": "^2.5.4"
	},
	"packageManager": "bun@1.2.18"
}
